<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10dp"
    android:background="#00000000"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/serverside"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8dp"
            android:orientation="horizontal">

            <com.kredivation.switchland.utilities.CircleImageView
                android:id="@+id/serveruserImage"
                android:layout_width="@dimen/size_30px"
                android:layout_height="@dimen/size_30px"
                android:layout_margin="@dimen/_2dp"
                android:src="@mipmap/placeholder" />

        </LinearLayout>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.9"
            android:background="@drawable/my_side_chatbg"
            android:minHeight="@dimen/_60dp"
            android:orientation="vertical"
            android:padding="@dimen/_1dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_8dp"
            app:cardElevation="@dimen/_4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/servermsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5dp"
                    android:layout_weight="0.8"
                    android:gravity="left"
                    android:text="sdcsdcsdc"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_12dp" />


                <TextView
                    android:id="@+id/servertiming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3dp"
                    android:layout_marginRight="@dimen/_5dp"
                    android:layout_marginBottom="@dimen/_4dp"
                    android:gravity="right"
                    android:text="sdcsdcsdc"
                    android:textSize="@dimen/_10dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/serveruserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:paddingTop="@dimen/_2dp"
                    android:paddingRight="@dimen/_5dp"
                    android:paddingBottom="@dimen/_5dp"
                    android:text="sdcsdcsdc"
                    android:textSize="@dimen/_12dp"
                    android:visibility="gone" />

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>


        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="0.2"
            android:background="#00000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/myside"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_5dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="0.2"
            android:background="#00000000" />


        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.9"
            android:background="@drawable/my_side_chatbg"
            android:minHeight="@dimen/_60dp"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="@dimen/_8dp"
            app:cardElevation="@dimen/_4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mycomment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5dp"
                    android:layout_weight="0.8"
                    android:gravity="left"
                    android:text="sdcsdcsdc sdcsdcsdc sdcsdcsdc"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/mytiming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3dp"
                    android:layout_marginRight="@dimen/_5dp"
                    android:layout_marginBottom="@dimen/_4dp"
                    android:gravity="right"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/myName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:paddingTop="@dimen/_2dp"
                    android:paddingRight="@dimen/_5dp"
                    android:paddingBottom="@dimen/_5dp"
                    android:text="sdcsdcsdc"
                    android:textSize="@dimen/_12dp"
                    android:visibility="gone" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</LinearLayout>
