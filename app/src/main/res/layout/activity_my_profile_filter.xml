<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.NoActionBar.AppBarOverlay"
            android:visibility="visible">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/back"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="ic"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/dimTextSize_20"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Filter"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/dimTextSize_18" />
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/app_bar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimValue_16"
                android:layout_marginLeft="@dimen/dimValue_16"
                android:layout_marginRight="@dimen/dimValue_16"
                android:layout_marginTop="@dimen/dimValue_10"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimValue_5"
                        android:layout_weight="0.4"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.kredivation.switchland.utilities.CircleImageView
                            android:id="@+id/profileImage"
                            android:layout_width="@dimen/size_100px"
                            android:layout_height="@dimen/size_100px"
                            android:src="@drawable/userimage" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimTextSize_20"
                        android:layout_weight="0.6"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/uNeme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/brown_color"
                            android:textSize="@dimen/dimTextSize_18"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/uemail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/secondary_text"
                            android:textSize="@dimen/dimTextSize_14"

                            />

                        <TextView
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimTextSize_5"
                            android:text=""
                            android:textColor="@color/secondary_text"
                            android:textSize="@dimen/dimTextSize_14" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/homeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimTextSize_5"
                    android:text=""
                    android:textColor="@color/orange"
                    android:textSize="@dimen/dimTextSize_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimValue_16"
                    android:background="@color/light_white_color"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimValue_10"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/size_40px"
                            android:layout_height="@dimen/size_40px"
                            android:background="@drawable/circle_btn"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/locationIcon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="123"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/dimTextSize_18" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimTextSize_20"
                        android:layout_weight="0.8"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/dimTextSize_14"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/country"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimTextSize_5"
                            android:text=""
                            android:textColor="@color/secondary_text"
                            android:textSize="@dimen/dimTextSize_14" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimValue_16"
                    android:background="@color/light_white_color"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimValue_10"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/size_40px"
                            android:layout_height="@dimen/size_40px"
                            android:background="@drawable/circle_btn"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/calIcon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="123"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/dimTextSize_18" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimTextSize_20"
                        android:layout_weight="0.8"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Traveling Date"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/dimTextSize_14"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/travlingDtae"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimTextSize_5"
                            android:text=""
                            android:textColor="@color/secondary_text"
                            android:textSize="@dimen/dimTextSize_14" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimValue_20"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="START DATE"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/dimTextSize_14"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/startDateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimTextSize_7"
                        android:background="@drawable/layout_round_corner"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dimValue_10"
                        android:paddingTop="@dimen/dimValue_10">

                        <TextView
                            android:id="@+id/startDate"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimValue_10"
                            android:layout_weight="0.8"
                            android:text="Start Date"
                            android:textColor="@color/secondary_text"
                            android:textSize="@dimen/dimTextSize_14" />

                        <TextView
                            android:id="@+id/starticon"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:gravity="center"
                            android:text="Star"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimTextSize_18" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimValue_20"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="END DATE"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/dimTextSize_14"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/endDateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimTextSize_7"
                        android:background="@drawable/layout_round_corner"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dimValue_10"
                        android:paddingTop="@dimen/dimValue_10">

                        <TextView
                            android:id="@+id/endDate"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimValue_10"
                            android:layout_weight="0.8"
                            android:text="End Date"
                            android:textColor="@color/secondary_text"
                            android:textSize="@dimen/dimTextSize_14" />

                        <TextView
                            android:id="@+id/endIcon"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:gravity="center"
                            android:text="end"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimTextSize_18" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimValue_20"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="COUNTRY"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/dimTextSize_14"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimTextSize_7"
                        android:background="@drawable/layout_round_corner"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dimValue_1"
                        android:paddingTop="@dimen/dimValue_1">

                        <Spinner
                            android:id="@+id/countryspinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimValue_10"
                            android:popupBackground="@color/white"
                            android:spinnerMode="dropdown" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimValue_20"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CITY"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/dimTextSize_14"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimTextSize_7"
                        android:background="@drawable/layout_round_corner"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dimValue_1"
                        android:paddingTop="@dimen/dimValue_1">

                        <Spinner
                            android:id="@+id/cityspinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimValue_10"
                            android:popupBackground="@color/white"
                            android:spinnerMode="dropdown" />

                    </LinearLayout>

                    <TextView android:id="@+id/showAllfilter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Show All Filters"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/dimTextSize_14"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/moreFilterLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimValue_10"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="NO. of Beds"
                                android:textColor="@color/primary_text"
                                android:textSize="@dimen/dimTextSize_14"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/bedroomspinner"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:popupBackground="@color/white" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/divider" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimValue_16"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No. of Guests"
                                android:textColor="@color/primary_text"
                                android:textSize="@dimen/dimTextSize_14"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/Sleepspinner"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:popupBackground="@color/white" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/divider" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimValue_10"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Gender"
                                android:textColor="@color/primary_text"
                                android:textSize="@dimen/dimTextSize_14"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/genderspinner"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:popupBackground="@color/white" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/dimValue_10"
                                android:background="@color/divider" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Life Style"
                                android:textColor="@color/primary_text"
                                android:textSize="@dimen/_14dp"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/Typeoftravellerspinner"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:popupBackground="@color/white" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/_10dp"
                                android:background="@color/divider" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimValue_10"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Religion"
                                android:textColor="@color/primary_text"
                                android:textSize="@dimen/dimTextSize_14"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/Religionspinner"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:popupBackground="@color/white" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/dimValue_10"
                                android:background="@color/divider" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10dp">

                        <Button
                            android:id="@+id/submit"
                            android:layout_width="@dimen/size_130px"
                            android:layout_height="@dimen/size_40px"
                            android:background="@drawable/button_login"
                            android:elevation="10dp"
                            android:gravity="center"
                            android:text="Submit"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimTextSize_14" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_40px" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>