<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_12dp"
    app:cardElevation="@dimen/_4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimValue_5"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <com.kredivation.switchland.utilities.CircleImageView
                    android:id="@+id/userImage"
                    android:layout_width="@dimen/size_40px"
                    android:layout_height="@dimen/size_40px"
                    android:layout_margin="@dimen/_2dp"
                    android:src="@mipmap/placeholder" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimValue_10"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3dp"
                        android:layout_weight=".7"
                        android:text="Narayan Semwal"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/dimTextSize_14" />


                    <TextView
                        android:id="@+id/date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_weight=".3"
                        android:text="1 May"
                        android:visibility="gone"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/dimTextSize_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/_5dp">

                    <TextView
                        android:id="@+id/locationIcon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3dp"
                        android:layout_weight=".5"
                        android:text="Noida India"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimTextSize_12"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_weight=".6"
                        android:text=""
                        android:textColor="@color/secondry_txt_color"
                        android:textSize="@dimen/dimTextSize_12" />


                    <TextView
                        android:id="@+id/count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimValue_7"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_weight=".3"
                        android:background="@color/green"
                        android:text="50"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimTextSize_12"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/timeleft"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimValue_7"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_weight=".4"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/red"
                        android:textSize="@dimen/dimTextSize_12" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
